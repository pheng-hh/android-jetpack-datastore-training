<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragment_sport_sessions">

    <fragment
        android:id="@+id/fragment_sport_sessions"
        android:name="com.sfeir.school.android.datastore.ui.fragment.sportsessions.SportSessionsFragment"
        android:label="Sport Sessions"
        tools:layout="@layout/fragment_sport_sessions">

        <action
            android:id="@+id/action_sport_sessions_to_settings"
            app:destination="@id/fragment_settings"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />

    </fragment>

    <fragment
        android:id="@+id/fragment_settings"
        android:name="com.sfeir.school.android.datastore.ui.fragment.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />

</navigation>
